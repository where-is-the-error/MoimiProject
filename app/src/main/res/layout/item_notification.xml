<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layout_notification_root"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@drawable/bg_input_rounded"
    android:layout_marginBottom="12dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="top">

        <TextView
            android:id="@+id/tv_noti_message"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="알림 내용"
            android:textSize="16sp"
            android:textColor="#000000"
            android:lineSpacingExtra="4dp"/>

        <TextView
            android:id="@+id/btn_mark_read"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="읽음"
            android:textSize="12sp"
            android:textColor="#888888"
            android:padding="8dp"
            android:clickable="true"
            android:focusable="true"/>

        <ImageView
            android:id="@+id/btn_delete_noti"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/vector"
            android:contentDescription="삭제"
            android:padding="4dp"
            android:layout_marginStart="4dp"
            app:tint="#B0B0B0"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_actions"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="12dp"
        android:gravity="end"
        android:visibility="gone">

        <android.widget.Button
            android:id="@+id/btn_decline"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:text="거절"
            android:textSize="14sp"
            android:textColor="#FFFFFF"
            android:backgroundTint="#B0B0B0"
            android:layout_marginEnd="8dp"
            style="?android:attr/borderlessButtonStyle"/>

        <android.widget.Button
            android:id="@+id/btn_accept"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:text="수락"
            android:textSize="14sp"
            android:textColor="#FFFFFF"
            android:backgroundTint="#FF8989"
            style="?android:attr/borderlessButtonStyle"/>
    </LinearLayout>
</LinearLayout>
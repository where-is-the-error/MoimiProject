<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/tv_chat_list_header"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:text="채팅 목록"
        android:textSize="18sp"
        android:textStyle="bold"
        android:gravity="center"
        android:background="#FFFFFF"
        android:elevation="4dp"
        app:layout_constraintTop_toTopOf="parent"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_chat_list_container"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/tv_chat_list_header"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:listitem="@layout/item_chat_list_row"/> </androidx.constraintlayout.widget.ConstraintLayout>
<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp"
    android:background="?attr/selectableItemBackground"> <ImageView
    android:id="@+id/iv_chat_list_profile"
    android:layout_width="50dp"
    android:layout_height="50dp"
    android:src="@mipmap/ic_launcher"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintBottom_toBottomOf="parent" />

    <TextView
        android:id="@+id/tv_chat_list_username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="철수"
        android:textStyle="bold"
        android:textSize="16sp"
        android:textColor="#000000"
        android:layout_marginStart="16dp"
        app:layout_constraintStart_toEndOf="@id/iv_chat_list_profile"
        app:layout_constraintTop_toTopOf="@id/iv_chat_list_profile" />

    <TextView
        android:id="@+id/tv_chat_list_preview"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        tools:text="너 어디야? 빨리 와"
        android:textSize="14sp"
        android:textColor="#808080"
        android:layout_marginTop="4dp"
        android:ellipsize="end"
        android:maxLines="1"
        app:layout_constraintStart_toStartOf="@id/tv_chat_list_username"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_chat_list_username" />

</androidx.constraintlayout.widget.ConstraintLayout>
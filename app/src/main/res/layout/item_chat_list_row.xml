<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp"
    android:background="?attr/selectableItemBackground">

    <ImageView
        android:id="@+id/iv_chat_profile"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/profile"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <TextView
        android:id="@+id/tv_chat_list_username"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="채팅방 이름"
        android:textStyle="bold"
        android:textSize="16sp"
        android:textColor="#000000"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintStart_toEndOf="@id/iv_chat_profile"
        app:layout_constraintTop_toTopOf="@id/iv_chat_profile"
        app:layout_constraintEnd_toStartOf="@+id/tv_chat_time"
        app:layout_constraintHorizontal_bias="0"/>

    <TextView
        android:id="@+id/tv_chat_list_preview"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="마지막 메시지 미리보기"
        android:textSize="14sp"
        android:textColor="#888888"
        android:layout_marginTop="4dp"
        android:maxLines="1"
        android:ellipsize="end"
        app:layout_constraintStart_toStartOf="@id/tv_chat_list_username"
        app:layout_constraintTop_toBottomOf="@id/tv_chat_list_username"
        app:layout_constraintEnd_toStartOf="@+id/view_unread_badge"/>

    <TextView
        android:id="@+id/tv_chat_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="오후 2:30"
        android:textSize="12sp"
        android:textColor="#AAAAAA"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/tv_chat_list_username"
        app:layout_constraintBottom_toBottomOf="@id/tv_chat_list_username"/>

    <View
        android:id="@+id/view_unread_badge"
        android:layout_width="8dp"
        android:layout_height="8dp"
        android:background="@drawable/bg_button_red"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_chat_time"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>
<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingVertical="4dp"
    android:paddingHorizontal="16dp">

    <ImageView
        android:id="@+id/iv_chat_profile"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/profile"
        android:scaleType="centerCrop"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/tv_chat_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="이름"
        android:textSize="12sp"
        android:textColor="#555555"
        android:layout_marginStart="8dp"
        android:layout_marginBottom="2dp"
        app:layout_constraintStart_toEndOf="@id/iv_chat_profile"
        app:layout_constraintTop_toTopOf="@id/iv_chat_profile"/>

    <TextView
        android:id="@+id/tv_chat_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="메시지 내용"
        android:textSize="15sp"
        android:textColor="#000000"
        android:background="@drawable/bg_chat_bubble_other"
        android:paddingHorizontal="12dp"
        android:paddingVertical="8dp"
        android:maxWidth="240dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="4dp"
        app:layout_constraintStart_toEndOf="@id/iv_chat_profile"
        app:layout_constraintTop_toBottomOf="@id/tv_chat_name"/>

    <TextView
        android:id="@+id/tv_chat_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="오전 10:00"
        android:textSize="10sp"
        android:textColor="#AAAAAA"
        android:layout_marginStart="4dp"
        app:layout_constraintStart_toEndOf="@id/tv_chat_message"
        app:layout_constraintBottom_toBottomOf="@id/tv_chat_message"/>

</androidx.constraintlayout.widget.ConstraintLayout>